{
  "name": "@ldesign/docs",
  "version": "1.0.0",
  "description": "智能的文档生成工具，支持 API 文档、组件文档、Markdown 和交互式演示",
  "keywords": [
    "ldesign",
    "docs",
    "documentation",
    "api-docs",
    "component-docs",
    "markdown",
    "static-site"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "vite": "^5.0.0",
    "vue": "^3.4.0",
    "markdown-it": "^14.0.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-anchor": "^9.0.0",
    "shiki": "^1.0.0",
    "typescript": "^5.7.3",
    "@vue/compiler-sfc": "^3.4.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "chokidar": "^3.5.3",
    "fast-glob": "^3.3.2",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.0",
    "boxen": "^7.1.1",
    "sirv": "^2.0.4",
    "compression": "^1.7.4",
    "flexsearch": "^0.7.43"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/markdown-it": "^13.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/babel__traverse": "^7.20.5",
    "@types/babel__types": "^7.20.5",
    "@types/inquirer": "^9.0.7",
    "@types/compression": "^1.7.5",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5"
  },
  "bin": {
    "ldesign-docs": "./bin/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

